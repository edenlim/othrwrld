<p id="notice"><%= notice %></p>

<h1>Character Characters</h1>

<table>
  <thead>
    <tr>
      <th>User1</th>
      <th>User2</th>
      <th>Relationship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_characters.each do |character_character| %>
      <tr>
        <td><%= character_character.user1 %></td>
        <td><%= character_character.user2 %></td>
        <td><%= character_character.relationship %></td>
        <td><%= link_to 'Show', character_character %></td>
        <td><%= link_to 'Edit', edit_character_character_path(character_character) %></td>
        <td><%= link_to 'Destroy', character_character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

