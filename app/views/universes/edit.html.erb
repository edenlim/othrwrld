<h1>Editing Universe</h1>

<%= form_with scope: :universe, model: @universe, local: true do |form| %>

	<p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>


  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Show', @universe %> |
<%= link_to 'Back', universes_path %>