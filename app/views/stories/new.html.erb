<div class="contain">
	<h1>New Story</h1>

	<%= form_with scope: :story, url: stories_path, local: true do |form| %>


		<h2>UNIVERSE</h2>
		<%= form.collection_select :universe_id, @universes, :id, :name %>


		<h2>GENRE</h2>
		<%= form.collection_select :genre_id, @genres, :id, :name %>


		<p>
	    <%= form.label :name %><br>
	    <%= form.text_field :name %>
	  </p>



	  <p>
	    <%= form.label :summary %><br>
	    <%= form.text_area :summary %>
	  </p>


	    <%= form.submit :class => "submit"%>
	<% end %>

	<%= link_to 'Back', stories_path %>
</div>

<%= stylesheet_link_tag 'new' %>